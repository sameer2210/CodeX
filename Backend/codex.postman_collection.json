              "raw": "{{BASE_URL}}/api/projects/{{PROJECT_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "projects", "{{PROJECT_ID}}"]
            }
          }
        },
        {
          "name": "Update Project Code",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"console.log('Updated code');\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/projects/{{PROJECT_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "projects", "{{PROJECT_ID}}"]
            }
          }
        },
        {
          "name": "AI Review Project",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/projects/{{PROJECT_ID}}/review",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "projects", "{{PROJECT_ID}}", "review"]
            }
          }
        }
      ]
    }

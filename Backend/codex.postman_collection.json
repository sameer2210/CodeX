        {
          "name": "Get All Projects",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}", "type": "text" }],
            "url": {
              "raw": "{{BASE_URL}}/api/projects/get-all",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "projects", "get-all"]
            }
          }
        },
        {
          "name": "Get Project by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{JWT_TOKEN}}", "type": "text" }],
